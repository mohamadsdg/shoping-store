extends ../layouts/main-layout.pug 

block content
    main
        h1 My Orders
        if data.length > 0
            ul
                each order in data 
                    li 
                        h1 # #{order.id}
                        ul
                            each product in order.products
                                li #{product.title} (#{product.orderItem.quantity})
                            
        else    
            p Nothing there ...!