extends ../layouts/main-layout.pug 

block style
    link(rel="stylesheet", href="/css/orders.css")

block content
    main
        h1 My Orders
        if data.length > 0
            ul.orders
                each order in data 
                    li.orders__item
                        h1 # #{order._id} 
                            a(href= '/orders/'+order._id) Invoice
                        ul.orders__products
                            each product in order.products
                                li.orders__products-item #{product.product.title} (#{product.quantity}) 
                            
        else    
            p Nothing there ...!