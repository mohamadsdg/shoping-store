extends ../layouts/main-layout.pug 

block style
    link(rel="stylesheet", href="/css/orders.css")

block content
    main
        h1 My Orders
        if data.length > 0
            ul.orders
                each order in data 
                    li.orders__item
                        h1 # #{order._id}
                        ul.orders__products
                            each product in order.items
                                li.orders__products-item #{product.title} (#{product.quantity})
                            
        else    
            p Nothing there ...!