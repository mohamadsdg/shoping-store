extends ../layouts/main-layout.pug 

block style
    link(rel="stylesheet", href="/css/product.css")

block content
    if errorMessage     
        div.user-message.user-message--error #{errorMessage}
    main
        h1 My Products
        if data.length > 0  
            .grid
                each product in data
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src=product.imageUrl alt="A Book")
                        .card__content
                            h2.product__price #{product.price}
                            p.product__descriptionA #{product.description}
                            p.product__descriptionA added By Admin : #{product.userId.email}
                        .card__actions
                            a(href='/admin/edit-product/'+ product._id +'?edit=true').btn Edit                               
                            input(type="hidden" name="_csrf" value=csrfToken )                 
                            input(type="hidden" name="productId" value=product._id)                   
                            button(type="button" onClick='deleteProduct(this)').btn Delete
        else
            p Empty Product...
block script
    script(src="/js/admin.js" type='text/javascript')