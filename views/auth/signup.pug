extends ../layouts/main-layout.pug

block style
    link(rel="stylesheet", href="css/forms.css")
    link(rel="stylesheet", href="css/auth.css")

block content
     main
        if errorMessage     
            div.user-message.user-message--error #{errorMessage}
        form.login-form(action="/signup" ,method="POST" novalidate)
            input(type="hidden" name="_csrf" value=csrfToken )                 
            .form-control
                label(for="email") E-Mail
                input(type="email", name="email" value=oldInput.email)#email
            .form-control
                label(for="password") Password
                input(type="password", name="password" value=oldInput.password)#password  
            .form-control
                label(for="confirmPassword") Confirm Password
                input(type="password", name="confirmPassword" value=oldInput.confirm_pass)#confirmPassword                       
            button.btn(type="submit") SignUp
